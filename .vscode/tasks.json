{
    "version": "2.0.0",
    "echoCommand": true,
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake  -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug ..",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make   ",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}